---
import "../css/general.css";
import kort from "../img/map.webp";
import logo from "../img/NVFotologo.webp";
import instalogo from "../img/iglogoblue.webp";
---

<section class="grid_1-3">
  <div id="aabningstider">
    <h3>ÅBNINGSTIDER</h3>
    <div id="tid-info">
      <div class="dage">
        <p>Mandag</p>
        <p>Tirsdag</p>
        <p>Onsdag</p>
        <p>Torsdag</p>
        <p>Fredag</p>
        <p>Lørdag</p>
        <p>Søndag</p>
      </div>
      <div class="tider">
        <p>9.00 - 17.30</p>
        <p>9.00 - 17.30</p>
        <p>9.00 - 17.30</p>
        <p>9.00 - 17.30</p>
        <p>9.00 - 18:00</p>
        <p>9.00 - 13:00</p>
        <p>LUKKET</p>
      </div>
    </div>
  </div>
  <div id="lokation-info">
    <a href="/"><img src={kort.src} alt="kort" id="kort" /></a>

    <p>Frederiksborgvej 84, 2400 København NV</p>
  </div>
  <div id="kontakt-info">
    <div class="info-kontakt">
      <h3>KONTAKT OS</h3>
      <p>
        Telefon: <a href="tel:+4535818071" class="kontakt-link"
          >+45 35 81 80 71</a
        >
      </p>
      <p>
        E-mail:
        <a href="mailto:post@nv-foto.dk" class="kontakt-link">post@nv-foto.dk</a
        >
      </p>
    </div>
    <h3>FØLG OS</h3>
    <div id="insta">
      <a
        href="https://www.instagram.com/nv.foto.dk/"
        target="_blank"
        class="ig-link"
      >
        <img src={instalogo.src} alt="instagram logo" id="IGlogo" />
        <p class="insta-tag">nv.foto.dk</p>
      </a>
    </div>
    <div><a href="/"><img src={logo.src} alt="logo" id="logo" /></a></div>
  </div>
</section>

<style>
  #logo {
    max-width: 170px;
    margin-top: 30px;
  }

  #kort {
    max-width: 100%;
    max-height: 200px;
    margin-top: 20px;
  }

  p,
  li,
  ul {
    color: white;
    font-size: 18px;
  }

  section {
    padding: 2rem 3rem;
    background-color: #091f5b;
  }

  .grid_1-3 {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    place-items: center;
    align-items: normal;
  }

  #tid-info {
    display: flex;
    flex-direction: row;
    gap: 4rem;
  }

  #tid-info p {
    margin: 12px 0 0 0;
  }

  .dage p {
    font-family: montserrat-m;
  }

  #lokation-info {
    grid-column: 2;
    text-align: center;
  }

  #kontakt-info {
    grid-column: 3;
  }

  #insta {
    background-color: white;
    padding: 5px 10px;
    border-radius: 10px;
    margin: 20px 0 0 0;
  }

  #aabningstider {
    grid-column: 1;
  }

  .kontakt-link {
    text-decoration: none;
    color: white;
    font-family: montserrat-m;
  }

  .ig-link {
    text-decoration: none;
    color: white;
    font-family: montserrat-;
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 10px;
  }

  #IGlogo {
    max-width: 100%;
    max-width: 50px;
  }

  .insta-tag {
    font-size: clamp(18px, 2vw, 22px);
    font-family: montserrat-m;
    color: #091f5b;
    line-height: 0;
  }

  h3 {
    font-size: clamp(18px, 3vw, 22px);
    margin-bottom: 10px;
    color: white;
    letter-spacing: 1px;
  }

  @media (max-width: 900px) {
    .grid_1-3 {
      grid-template-columns: 1fr;
      place-items: center;
    }

    #aabningstider,
    #lokation-info,
    #kontakt-info {
      grid-column: 1;
      margin: 0 0 20px 0;
    }

    #lokation-info {
      margin: 20px;
      text-align: center;
    }

    #kort {
      height: clamp(200px, 40vw, 250px);
      margin-top: 0;
    }

    p,
    li,
    ul {
      text-align: center;
      font-size: clamp(14px, 3vw, 18px);
    }

    h3 {
      text-align: center;
    }

    #logo {
      margin-bottom: 0;
    }

    #insta {
      display: flex;
      flex-direction: row;
    }
    #aabningstider p {
      text-align: left;
    }

    .info-kontakt {
      margin-bottom: 40px;
    }
  }
</style>
