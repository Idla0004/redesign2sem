---
import "../css/general.css";

interface Item {
  kategori: string;
  type: string;
  pris: string;
}

interface SubCategory {
  kategori: string;
  headline: string;
  procestime: string;
}

interface Props {
  data: Item[];
  headline: string;
  subCategories: SubCategory[];
  engangskamera?: string;
  underline?: string;
  information?: string;
}

const { data, headline, subCategories, engangskamera, information, underline } =
  Astro.props;
---

<div class="prisliste-card">
  <h2>{headline}</h2>

  {engangskamera && <p class="engangskamera-info">{engangskamera}</p>}
  {information && <p>{information}</p>}

  {
    subCategories.map((subCategory) => (
      <>
        <div class="prisliste-subcategory">
          <h3>{subCategory.headline}</h3>
          {subCategory.procestime && (
            <p class="underline">{subCategory.procestime}</p>
          )}
          <div class="prisliste-items">
            {data
              .filter((item) => item.kategori === subCategory.kategori)
              .map((item) => (
                <div class="prisliste-item">
                  <span class="liste-titel">{item.type}</span>
                  <span class="liste-pris">{item.pris}</span>
                </div>
              ))}
            {subCategory.kategori === "Digitalt Medie" && (
              <div class="prisliste-item">
               <span class="liste-titel-knap">Ved specielle m√•l</span>
                <span class="liste-pris">
                  <a
                    href="mailto:kontakt@dinmail.dk"
                    class="kontakt-os"
                    aria-label="Kontakt os her"
                  >
                    Kontakt os
                  </a>
                </span>
              </div>
            )}
          </div>
        </div>
      </>
    ))
  }
</div>

<style>
  .underline {
    border-bottom: 1px solid #000000;
    margin-bottom: 1.5rem;
  }

  .engangskamera-info {
    font-family: Montserrat-m;
    color: #00071a;
    margin: 0;
  }

  * {
    box-sizing: border-box;
  }

  .prisliste-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1rem;
    max-width: 1400px;
    width: 100%;
    padding-bottom: 3rem;
  }

  .prisliste-card {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    width: 100%;
    padding: 1.5rem 2.5rem;
    margin: 1.5rem auto;
  }

  .prisliste-card h2 {
    font-size: 32px;
    margin-bottom: 0.5rem;
    color: #00071a;
    font-weight: bold;
  }

  .prisliste-subcategory {
    margin-bottom: 1.5rem;
  }

  .prisliste-subcategory h3 {
    font-size: 24px;
    margin-bottom: 1rem;
    color: #00071a;
    font-weight: bold;
  }

  .engangs-info {
    font-size: 18px;
    font-weight: 500;
    color: #00071a;
    margin-bottom: 1rem;
  }

  .prisliste-items {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    font-family: montserrat-r;
  }

  .prisliste-item {
    display: flex;
    justify-content: space-between;
    flex-direction: row;
    max-width: 100%;
    width: 600px;
    align-items: end;
    padding: 0.5rem 0;
    border-bottom: 1px solid #000000;
    margin-inline-start: auto;
  }

  .liste-titel {
    font-size: 20px;
  }

  .liste-pris {
    font-family: Montserrat-m;
    font-size: 20px;
  }

   .liste-titel-knap {
    font-size: 20px;
    height: 30px;
  }

  .kontakt-os {
    font-family: montserrat-m;
    font-size: 20px;
    text-decoration: none;
    height: 100%;
    background: linear-gradient(180deg, transparent 50%, #ffc446 50%);
    max-width: 200px;
    padding-left: 15px;
    padding-right: 15px;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
    width: 100%;
    height: 30px;
    display: inline-block;
    max-width: fit-content;
    color: #091f5b;
    transition:
      background 0.5s ease-in-out,
      font-family 0.5s ease-in-out;
  }

  .kontakt-os:hover {
    font-family: montserrat-sb;
    font-size: 20px;
    background: #ffc446;
    border-radius: 5px;
    cursor: pointer;
  }

  @media (max-width: 1400px) {
    .prisliste-container {
      grid-template-columns: 1fr;
    }
    .prisliste-card {
      width: 100%;
    }
  }

  @media (max-width: 850px) {
    .prisliste-container {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
    }

    .liste-titel,
    .liste-pris, .liste-titel-knap {
      font-size: 18px;
    }

    .prisliste-card h2 {
      font-size: 28px;
    }

    .prisliste-card h3 {
      font-size: 20px;
    }

    .kontakt-os
      {
      font-size: 18px;
      padding-left: 10px;
      padding-right: 10px;
    }

    .kontakt-os:hover
      {
      font-size: 18px;
      padding-left: 10px;
      padding-right: 10px;
    }
    }
  }
</style>
